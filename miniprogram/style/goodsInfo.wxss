.goods-info {
  height: 220rpx;
}

.goods-info .userinfo{
  display: flex;
  width: 100rpx;
  flex-direction: column;
   margin-right: 20rpx;
   margin-top: 20rpx;
   font-size: 28rpx;
}

.userinfo .avatarUrl{
  width: 100%;
  height:100rpx;
  border-radius: 50rpx;
}

.userinfo .nickname{
  height: 80rpx;
  line-height: 80rpx;
}

.goods-info .pic-url {
  width: 180rpx;
  height: 180rpx;
  margin-top: 20rpx;
}

.goods-info .goods-detail {
  display: flex;
  flex: 1;
  margin: 20rpx;
  flex-direction: column;
  height: 180rpx;
  box-sizing: border-box;
}

.goods-detail .title {
  font-size: 25rpx;
  height: 30rpx;
  line-height: 30rpx;
}

.goods-detail .description {
  flex: 1;
  margin: 15rpx 0;
  line-height: 30rpx;
  font-size: 30rpx;
}

.goods-detail .footer {
  display: flex;
  justify-content: space-between;
  font-size: 25rpx;
  height: 30rpx;
  line-height: 30rpx;
}

.footer .price {
  display: flex;
  align-items: center;
  color: red;
  font-size: 30rpx;
}

.footer .price image {
  height: 30rpx;
  width: 30rpx;
}

.footer .label {
  color: #aaa;
}

.goods-info .distance-item {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  width: 80rpx;
}

.distance-item .location {
  width: 100%;
  height: 80rpx;
}

.distance-item .distance {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 25rpx;
  text-align: center;
}
