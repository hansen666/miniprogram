.mask{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.4);
  z-index: 9999;
}

.modal-content{
  display: flex;
  flex-direction: column;
  width: 90%;
  background-color: #fff;
  border-radius: 10rpx;
}

.header{
  width: 100%;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  font-weight: bold
}

.content{
  margin: 20rpx;
  text-align: center;
}

button{
  color: green;
  width: 100%
}

