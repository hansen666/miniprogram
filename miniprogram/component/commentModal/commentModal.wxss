/* component/commentModal.wxss */
.mask{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.4);
  z-index: 9999;
  font-size: 28rpx;
}

.modal-content{
  height: auto;
  min-height: 100rpx;
  display: flex;
  align-items: flex-end;
  width: 100%;
  background-color: #fff;
}

.modal-content textarea{
  flex: 1;
 margin:0 20rpx 20rpx 20rpx;

}

.modal-content button{
  margin-bottom:15rpx;
  width: 150rpx;
  background-color: red;
  height:70rpx;
  margin-right: 20rpx;
  font-size: 30rpx;
}

