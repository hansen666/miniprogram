/* miniprogram/pages/chooseSchool/chooseSchool.wxss */

.container {
  height: 100vh;
}

.search {
  margin: 80rpx 0 0 80rpx;
  width: 100%;
  font-size: 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.search-content-body {
  display: flex;
  flex: 1;
  height: 700rpx;
  flex-direction: column;
  width: 100%;
  margin-left: 80rpx;
}

.search-result-item {
  margin: 20rpx 0;
}

.footer {
  height: 250rpx;
  align-items: flex-end;
  width: 100%;
}

.confirm {
  margin-top: 50rpx;
  border-radius: 80rpx;
  width: 80%;
  font-size: 35rpx;
}
