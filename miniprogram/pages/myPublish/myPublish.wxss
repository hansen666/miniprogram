/* miniprogram/pages/myPublish/myPublish.wxss */
@import "../index/index.wxss";
@import "../../style/empty.wxss";

.tabHeader{
  width: 100%;
  display: flex;
}

.tabHeader text{
  height: 60rpx;
  line-height: 60rpx;
  flex: 1;
  font-size: 32rpx;
  background-color: #fff;
  border-right: solid 1rpx rgba(0,0,0,0.1);
  text-align: center
}

.tabHeader  .active{
  color: red;
}

.edit{
  margin: 20rpx 0 20rpx 0;
  display: flex;
  justify-content: right;
  width: 100%;
}

.edit text{
  flex: 1;
  text-align: right;
  padding-right: 20rpx;
  font-size: 30rpx;
  height:50rpx;
  line-height: 50rpx;
}

.empty{
  display: flex;
  flex-direction: column;
  width: 100%;
  justify-content: center;
  align-items: center;
  color: #aaa;
}

.empty image{
  width: 200rpx;
  height: 200rpx;
  margin-top:200rpx;

}

.list{
  margin-top:0;
}

.list-item{
  position: relative;
}

.list-item  .status{
  width: 80rpx;
  height:80rpx;
  position: absolute;
  right: -40rpx;
  top:0;
}

.list-item .check-icon{
  width: 60rpx;
  height:60rpx;
  margin:80rpx 15rpx  80rpx 0;
}

.list-item .confirm-sold{
  margin:40rpx 0 30rpx 10rpx;
  width: 50rpx;
  height: 140rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  text-align: center;
  padding-left: 10rpx;
  padding-top:10rpx;

}

.bottom{
  display: flex;
  width: 100%;
  position: fixed;
  align-items: center;
  bottom: 0;
  left: 0;
  height: 100rpx;
  border-top:2rpx solid rgba(0, 0, 0, 0.1);
  background-color: #fff;
  z-index: 50;
}

.bottom .check-all{

  justify-content: center;
  border-right: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex: 1;


}

.check-all image{
    width: 60rpx;
    height:60rpx;
}
.check-all text{
  height: 60rpx;
  line-height: 60rpx;
}

.bottom .delete{
  flex: 1;
  text-align: center;
}