/**index.wxss**/
@import "../../style/guide.wxss";


.header {
  position: positive;
  display: flex;
  margin-top: 50rpx;
  padding: 0 30rpx;
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
}

.search {
  display: flex;
  flex: 1;
  height: 50rpx;
  margin-right: 30rpx;
  border: solid 1rpx #aaa;
  border-radius: 30rpx;
}

.search .key-word {
  height: 50rpx;
  width: 100%;
  padding-left: 60rpx;
  font-size: 30rpx;
}

.search .search-icon {
  position: absolute;
  margin: 5rpx 15rpx;
  width: 40rpx;
  height: 40rpx;
}

.header .label {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 50rpx;
  width: 100rpx;
  font-size: 28rpx;
  border: solid 1rpx #1ed8f7;
  border-radius: 15rpx;
}

.label-list {
  position: absolute;
  width: 100%;
  height: auto;
  top: 120rpx;
  display: flex;
  padding-left: 5%;
  flex-wrap: wrap;
  box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
  background-color: #f9f9f9;
  z-index: 100;
}

.label-item {
  font-size: 30rpx;
  margin-top: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  width: 22%;
}

.list {
  margin-top: 0;
}

.lis-item {
  justify-content: space-between;
  height: 220rpx;
}

.pic-url {
  margin-top: 20rpx;
  margin-right: 10rpx;
  width: 180rpx;
  height: 180rpx;
}

.goods-detail {
  display: flex;
  flex: 1;
  flex-direction: column;
  height: 100%;
}

.goods-detail .title {
  margin-top: 6rpx;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 30rpx;
}

.goods-detail .description {
  margin-top: 10rpx;
  height: 130rpx;
  line-height: 30rpx;
  font-size: 30rpx;
}

.goods-detail .footer {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 25rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.footer .price {
  display: flex;
  align-items: center;
  color: red;
  font-size: 30rpx;
}

.footer .price image {
  height: 30rpx;
  width: 30rpx;
}

.footer .label {
  color: #aaa;
}

.distance-item {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  width: 120rpx;
  height: 100%;
}

.distance-item .location {
  width: 100%;
  height: 100rpx;
}

.distance-item .distance {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 25rpx;
  text-align: center;
}


.empty{
  display: flex;
  flex-direction: column;
  width: 100%;
  justify-content: center;
  align-items: center;
  color: #aaa;
}

.empty image{
  width: 200rpx;
  height: 200rpx;
  margin-top:200rpx;

}

