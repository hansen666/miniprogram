/* miniprogram/pages/message/message.wxss */
.message-item{
  height: 150rpx;
  width: 100%;
  display: flex;
  font-size: 30rpx;
  border-bottom: solid 1rpx rgba(0,0,0,0.1)
}

.message-item .avatar-url{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin: 25rpx 20rpx ;
}

.message-item .info{

  display: flex;
  flex-direction: column;
  flex: 1;
  padding-top:30rpx;
  padding-right: 20rpx;
}

 .info .info-header{
  display: flex;
  justify-content: space-between;
}

.info-header .nickname{
  font-weight: Medium;
  font-size: 34rpx;
}

.info .info-content {
  display: flex;
  justify-content: space-between;
}

.info-content .red-point{
  width: 45rpx;
  height: 45rpx;

}

.info .pubTime,.content{
  color: #666;
}

.empty{
  display: flex;
  flex-direction: column;
  width: 100%;
  justify-content: center;
  align-items: center;
  color: #aaa;
}

.empty image{
  width: 200rpx;
  height: 200rpx;
  margin-top:200rpx;

}

