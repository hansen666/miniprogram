<!--miniprogram/pages/goodsDetail/goodsDetail.wxml-->
<view class="container">
  <view class="header">
    <image src="{{avatarUrl}}" />
    <text class="nickname">{{nickname}}</text>
    <text class="identifiedLabel">{{identifiedLabel}}</text>
  </view>
  <view class="phones">
    <swiper indicator-dots="true" autoplay="true" interval="3000" duration="500" circular="true">
      <block wx:for="{{picUrl}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image" width="355" height="150" />
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="detail">
    <view class="name-price">
      <text class="name">{{name}}</text>
      <view class="price">
        <image src="../../images/rmb.png"></image>{{price}}</view>

    </view>
<view class="description-browse">
<textarea class="description" disabled='true'>{{description}}</textarea>
<text class="browse-count">浏览{{browseCount}}次</text>
</view>
<view class="pubTime">
{{pubTime}}
</view>
<view class="contact">
<view class="real-name-item">
<text class="label"> 联系人</text>
<text class="real-name">{{realName}}</text>
</view>
<view class="phone-item">
  <text class="label">联系电话</text>
  <text class="phone">{{phone}}</text>
</view>
</view>
  </view>
  <view class="footer">
  <view class="collection">
  <image src="../../images/collection.png" />
  <!-- <image src="../../images/collection-chosed.png" /> -->
  <text>收藏</text>
  </view>
  <button bindtap=''>联系它</button>
  </view>
</view>